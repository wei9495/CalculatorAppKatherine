<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_onPrimaryContainer"
    android:backgroundTint="@color/md_theme_dark_inverseSurface"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:paddingHorizontal="@dimen/padding"
        android:paddingVertical ="@dimen/padding"
        android:text="Calculator"
        android:textColor="@color/md_theme_dark_background"
        android:textSize="48sp"
        app:autoSizeMaxTextSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />


    <EditText
        android:id="@+id/editFirstNum"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="First Number"
        android:inputType="number"
        android:paddingHorizontal="@dimen/padding"
        android:paddingVertical ="@dimen/padding"
        android:textColor="@color/md_theme_dark_inversePrimary"
        app:layout_constraintEnd_toStartOf="@+id/editSecondNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editSecondNum"
        android:layout_width="175dp"
        android:layout_height="77dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Second Number"
        android:inputType="number"
        android:paddingHorizontal="@dimen/padding"
        android:paddingVertical ="@dimen/padding"
        android:textColor="@color/md_theme_dark_inverseOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:paddingHorizontal="@dimen/padding"
        android:paddingVertical ="@dimen/padding"
        android:text="Select Operation"
        android:textColor="@color/md_theme_dark_surfaceVariant"
        android:textColorHint="#9C27B0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSecondNum" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_marginEnd="80dp"
        android:fontFamily="sans-serif-black"
        android:onClick="divide"
        android:text="/"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiply"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubtract"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_marginStart="72dp"
        android:fontFamily="sans-serif-black"
        android:onClick="multiply"
        android:scrollbarSize="10dp"
        android:text="*"
        android:textSize="20sp"
        app:iconSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:onClick="add"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSubtract"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="sans-serif-black"
        android:onClick="subtract"
        android:text="-"
        android:textColorHighlight="#2196F3"
        android:textColorLink="#13080C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonModulus"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:onClick="modulus"
        android:text="%"
        android:textColorHighlight="#2196F3"
        android:textColorLink="#13080C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonExponent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:id="@+id/buttonExponent"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:onClick="exponent"
        android:text="^"
        android:textColorHighlight="#2196F3"
        android:textColorLink="#13080C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiv"
        app:layout_constraintVertical_bias="0.211" />


    <TextView
        android:id="@+id/answer"
        android:layout_width="114dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="monospace"
        android:paddingVertical="@dimen/padding"
        android:text=""
        android:textColorHighlight="@color/md_theme_dark_background"
        android:textColorHint="@color/md_theme_dark_inverseOnSurface"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExponent"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="monospace"
        android:paddingVertical="@dimen/padding"
        android:paddingLeft="20dp"
        android:text="Answer:"
        android:textColor="@color/md_theme_dark_surfaceVariant"
        android:textColorHint="#9C27B0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answer"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonModulus"
        app:layout_constraintVertical_bias="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>